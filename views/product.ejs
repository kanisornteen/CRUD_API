<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Product List</h1>
    <% if (data.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(product) { %>
                    <tr>
                        <td><%= product.product_id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.description %></td>
                        <td><%= product.unit_price %></td>
                        <td><% if (product.image) { %>
                            <img src="data:image/jpeg;base64,<%= product.image %>" alt="Product Image" style="max-width: 100px;">
                            <% } else { %> No Image <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p><%= message %></p>
    <% } %>
</body>
</html>
